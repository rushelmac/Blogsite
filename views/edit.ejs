<%- include("./partials/header.ejs") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        
        <div class="field"><label for="">Title</label>
            <input type="text" name="blog[title]" placeholder="Name" value="<%= blog.title %> ">
        </div>

        <div class="field"><label for="">Image URL</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %> ">
        </div>

        <div class="field"><label for="">Content</label>
            <textarea name="blog[body]" placeholder="Your Thoughts" ><%= blog.body %> </textarea>
        </div>

        <button class="ui black basic button">Submit</button>
    </form>
</div>




<%- include("./partials/footer.ejs") %> 
