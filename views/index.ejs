<%- include("./partials/header.ejs") %> 

<div class="ui main text container">
    <div class="ui huge header"><h1>Index page</h1></div>

    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image"><img src="<%= blog.image %>" alt=""></div>
                    
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>  
                        
                        <div class="meta">
                            <span><%= blog.created.toDateString()%> </span>
                        </div>
                        
                        <div class="description">
                            <p style="width: 470px; white-space:nowrap; overflow: hidden; text-overflow: ellipsis;"><%- blog.body %>...</p>
                        </div>
                        
                        <div class="extra">
                            <a href="/blogs/<%= blog._id %>">Read More</a>
                            <i class="right chevron icon"></i>
                        </div>

                    </div>
                </div>
            <% });  %> 
        </div>
    </div>
</div>


<%- include("./partials/footer.ejs") %> 
